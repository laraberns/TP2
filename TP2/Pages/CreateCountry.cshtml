@page  
@model TP2.Pages.CreateCountryModel  
@{  
ViewData["Title"] = "Create Country";  
}  

<h2>@ViewData["Title"]</h2>

<form method="post">
    @for (int i = 0; i < Model.Countries.Count; i++)
    {
        <div class="mb-3">
            <label asp-for="Countries[@i].CountryName">Nome do país</label>
            <input asp-for="Countries[@i].CountryName" class="form-control" />
            <span asp-validation-for="Countries[@i].CountryName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Countries[@i].CountryCode">Código</label>
            <input asp-for="Countries[@i].CountryCode" class="form-control" />
            <span asp-validation-for="Countries[@i].CountryCode" class="text-danger"></span>
        </div>

        <hr />
    }

    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>

@if (Model.SubmittedCountries.Any())
{
    <div class="alert alert-success mt-4">
        <h4>Países cadastrados:</h4>
        <ul>
            @foreach (var country in Model.SubmittedCountries)
            {
                <li><strong>@country.CountryName</strong> - Código: @country.CountryCode</li>
            }
        </ul>
    </div>
}


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}